<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical" >

            <Button
                style="@style/ButtonText"
                android:background="@drawable/red_button"
                android:text="Red Button" >
            </Button>

            <Button
                style="@style/ButtonText"
                android:background="@drawable/blue_button"
                android:text="Blue Button" >
            </Button>

            <Button
                style="@style/ButtonText"
                android:background="@drawable/purple_button"
                android:text="Purple Button" >
            </Button>

            <Button
                style="@style/ButtonText"
                android:background="@drawable/green_button"
                android:text="Green Button" >
            </Button>

            <Button
                style="@style/ButtonText"
                android:background="@drawable/black_button"
                android:text="Black Button" >
            </Button>
            
            <Button
                style="@style/ButtonText"
                android:background="@drawable/orange_button"
                android:text="Orange Button" >
            </Button>
            
            <Button
                style="@style/ButtonText"
                android:background="@drawable/army_button"
                android:text="Army Button" >
            </Button>
            
             <Button
                style="@style/ButtonText"
                android:background="@drawable/yellowgreen_button"
                android:text="YellowGreen Button" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>