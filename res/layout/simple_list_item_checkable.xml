<?xml version="1.0" encoding="utf-8"?>
<ru.nekit.androidsamplelist.samples.CheckableLinerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textView"
        style="@style/menu_item_large_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dip"
        android:paddingLeft="10dip"
        android:paddingTop="14dip" />

    <ImageView
        style="@style/menu_item_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:paddingRight="10dip" />

</ru.nekit.androidsamplelist.samples.CheckableLinerLayout>